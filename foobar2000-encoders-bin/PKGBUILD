#!/bin/bash
# shellcheck disable=SC2034
# Maintainer: Alexandre Bouvier <contact at amb dot tf>
pkgname=foobar2000-encoders-bin
pkgver=20161209
pkgrel=1
pkgdesc="Encoder binaries for the Converter component"
arch=('any')
url="https://www.foobar2000.org/"
license=('GPL' 'BSD')
depends=('foobar2000')
makedepends=('wget' 'p7zip')
source=("Free_Encoder_Pack_$(date -I -d $pkgver).exe::https://www.foobar2000.org/encoderpack")
md5sums=('4efca2064f467906d1daf3d3c5f90a63')

# bypass dynamic download link
DLAGENTS=('https::/usr/bin/wget -nH --cut-dirs=3 -r -l 2 -A exe %u')

prepare() {
	7z x "Free_Encoder_Pack_$(date -I -d $pkgver).exe"
}

package() {
	# shellcheck disable=SC2154
	install -Dm755 -t "$pkgdir/usr/share/foobar2000/encoders" \
		{flac,mpcenc,oggenc2,opusenc,refalac,wavpack}.exe
}
