#!/bin/bash
# shellcheck disable=SC2034
# Maintainer: Alexandre Bouvier <contact at amb dot tf>
_pkgname=MovingAverage
pkgname="arduino-library-${_pkgname,,}"
pkgver=0.1.1
pkgrel=1
pkgdesc="Moving average library for Arduino"
arch=('any')
url="https://github.com/abouvier/$_pkgname"
license=('Apache')
depends=('arduino-library-circularbuffer')
source=("$_pkgname-$pkgver.tar.gz::https://github.com/abouvier/$_pkgname/archive/v$pkgver.tar.gz")
noextract=("$_pkgname-$pkgver.tar.gz")
md5sums=('63547c60ad09a663e6d331ad65a4bb0f')

package() {
	install -d "$pkgdir/usr/share/arduino/libraries/$_pkgname"
	tar -xf "$_pkgname-$pkgver.tar.gz" -C "$pkgdir/usr/share/arduino/libraries/$_pkgname" --strip-components=1
}
